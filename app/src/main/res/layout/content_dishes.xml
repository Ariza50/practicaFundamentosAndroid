<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_margin="16dp"
                                    app:cardElevation="8dp"
                                    app:cardCornerRadius="8dp"
                                    android:transitionName="transDetail"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="es.arizsystems.restaurante.fragment.DishesListFragment">



        <ImageView
            android:id="@+id/dish_image"
            android:layout_width="wrap_content"
            android:maxWidth="130dp"
            android:adjustViewBounds="true"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:contentDescription="Imagen Plato"
            app:srcCompat="@drawable/restaurante"/>

        <LinearLayout
            android:id="@+id/dish_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="120dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/dish_image"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/dish_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dish_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Nombre Plato"/>

            <TextView
                android:id="@+id/dish_pvp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Precio"/>

            <TextView
                android:id="@+id/dish_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Caliente / Frio"/>

        </LinearLayout>

        <TextView
            android:id="@+id/dish_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/dish_information"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            tools:text="Ingredientes del Plato"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>